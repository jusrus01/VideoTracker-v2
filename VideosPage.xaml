<Page x:Class="video_tracker_v2.VideosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:wpf="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:video_tracker_v2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Video Tracker - Videos" Width="auto" Height="auto"
      MinWidth="640" MinHeight="480"
      >
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="159*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="105*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <!--<wpf:VideoView
            Grid.Column="2"
            HorizontalAlignment="Stretch" Width="auto" VerticalAlignment="Stretch" Background="Black" 
            MinWidth="480" Height="auto" MinHeight="320" x:Name="videoView" Grid.RowSpan="2"/>-->

        <wpf:VideoView x:Name="videoView"
        Grid.Column="2"  HorizontalAlignment="Stretch" Width="auto" VerticalAlignment="Stretch" 
            MinWidth="480" Height="auto" MinHeight="320" Grid.RowSpan="2" IsHitTestVisible="False">
            <Canvas VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Black" Opacity="0.005" PreviewMouseLeftButtonUp="EnterFullscreenMode">
            </Canvas>
        </wpf:VideoView>
    </Grid>

</Page>
